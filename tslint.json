{
  "extends": ["tslint:recommended", "tslint-react", "tslint-sonarts"],
  "jsRules": {},
  "rules": {
    // tslint
    "ordered-imports": false,
    "arrow-parens": [true, "ban-single-arg-parens"],
    "object-literal-sort-keys": false,
    "no-var-requires": false,
    "variable-name": [
      true,
      "ban-keywords",
      "check-format",
      "allow-pascal-case",
      "allow-snake-case",
      "allow-leading-underscore"
    ],
    "object-literal-key-quotes": [true, "as-needed"],
    "curly": [true, "ignore-same-line"],
    "typedef": false,
    "no-duplicate-imports": true,
    "prefer-readonly": true,
    "prefer-const": true,
    "no-mergeable-namespace": true,
    "await-promise": true,
    "ban-comma-operator": true,
    "no-non-null-assertion": false,
    "no-reference": true,
    "no-parameter-reassignment": true,
    "promise-function-async": true,
    "prefer-for-of": true,
    "no-bitwise": true,
    "forin": true,
    "no-conditional-assignment": true,
    "no-construct": true,
    "no-debugger": true,
    "no-duplicate-super": true,
    "no-duplicate-switch-case": true,
    "no-duplicate-variable": true,
    "no-for-in-array": true,
    "no-eval": true,
    "no-empty": true,
    "no-invalid-template-strings": true,
    "no-invalid-this": true,
    "no-misused-new": true,
    "no-small-switch": {
      "severity": "warning"
    },
    "no-switch-case-fall-through": true,
    "no-string-throw": true,
    "no-string-literal": true,
    "no-sparse-arrays": true,
    "no-shadowed-variable": true,
    "no-return-await": true,
    "no-object-literal-type-assertion": true,
    "no-this-assignment": true,
    "no-unbound-method": true,
    "no-unnecessary-class": true,
    "no-unsafe-finally": true,
    "no-unused-expression": true,
    "no-void-expression": true,
    "prefer-conditional-expression": true,
    "prefer-object-spread": true,
    "radix": true,
    "restrict-plus-operands": true,
    "triple-equals": true,
    "use-isnan": true,
    "use-default-type-parameter": true,
    // too strict?
    // "no-dynamic-delete": true,
    // "no-inferred-empty-object-type": true,
    // "no-floating-promises": true,
    // "no-null-keyword": true,

    // tslint-reacts
    "jsx-alignment": true,
    "jsx-boolean-value": "never",
    "jsx-wrap-multiline": false,
    "jsx-curly-spacing": false,
    "jsx-key": true,
    "jsx-no-bind": true,
    "jsx-no-lambda": true,
    "jsx-no-string-ref": true,
    // tslint-sonarts
    "cognitive-complexity": [true, 20],
    "no-all-duplicated-branches": true,
    "no-case-with-or": true,
    "no-collection-size-mischeck": true,
    "no-element-overwrite": true,
    "no-empty-destructuring": true,
    "no-identical-conditions": true,
    "no-identical-expressions": true,
    "no-ignored-initial-value": true,
    "no-ignored-return": true,
    "no-in-misuse": true,
    "no-misleading-array-reverse": true,
    "no-misspelled-operator": true,
    "no-self-assignment": true,
    "no-unthrown-error": true,
    "no-use-of-empty-return-value": true,
    "no-useless-increment": true,
    "no-useless-intersection": true,
    "no-duplicate-string": {
      "severity": "warning"
    },
    "no-big-function": {
      "severity": "warning"
    },
    "no-identical-functions": {
      "severity": "warning"
    },

    // turned off because of prettier
    "quotemark": [true, "double"],
    "semicolon": false,
    "trailing-comma": false,
    "max-line-length": false,
    // turned off for now
    "jsx-no-multiline-js": false,
    "no-nested-template-literals": false,
    "max-union-size": false,
    "no-namespace": false
  },
  "rulesDirectory": []
}
